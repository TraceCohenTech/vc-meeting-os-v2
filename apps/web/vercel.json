{
  "framework": "nextjs",
  "regions": ["iad1"],
  "buildCommand": "next build",
  "installCommand": "npm install --prefer-offline",
  "crons": [
    {
      "path": "/api/cron/process-jobs",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/reminders-digest",
      "schedule": "0 13 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*).ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=604800"
        }
      ]
    },
    {
      "source": "/(.*).svg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=604800"
        }
      ]
    }
  ]
}
